<ul class="list-unstyled">
 <% posts.each do |post| %>
  <li class="media mb-3">
    <div class="media-body">
     <div>
       <%= link_to post.user.name, user_path(post.user) %><span class="text-muted"> posted at <%= post.created_at %></span>
     </div>
     <div>
       <p><a href="/posts/<%= post.id %>"><%= post.title %></a></p>
      </div>
     <div>
       <p><%= post.content %></p>
     </div>
     <div>
       <% post.images.each do |image| %>
         <%= image_tag image.url.url %>
       <% end %>
     </div>
     <div>
        <% if current_user == post.user %>
          <%= link_to 'Delete', post, method: :delete, date: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
        <% end %>
     </div>
    </div>
  </li>
 <% end %>
 <%= paginate posts %>
</ul>