<div class="user-show-wrapper">
    <aside>
      <div class="user-container">
        <div class="icon">
        <i class="far fa-user-circle fa-7x"></i>
        </div>
        <div class="user-contents">
          <section class="section-content">
            <div class="user-dm">
              <h3 class="user-name"><%= @user.name %></h3>
              <button class="message-button" type="button">メッセージを送信</button>
              <div class="follow-bt"><%= render 'relationships/follow_button', user: @user %></div>
            </div>
              <ul class="user-count">
                <li class="span-data"><span>投稿 <span class="cps"><%= @count_posts %></span>件</span></li>
                <li class="span-data"><a href="<%= followings_user_path(@user) %>" <%= 'active' if current_page?(followings_user_path(@user)) %>><span class="count-btn">フォロワー <span class="cps"><%= @count_followers %></span>人</span></a></li>
                <li class="span-data"><a href="<%= followers_user_path(@user) %>" <%= 'active' if current_page?(followers_user_path(@user)) %>><span class="count-btn">フォロー <span class="cps"><%= @count_followings %></span>人</span></a></li>
              </ul>
          </section>
        </div>
      </div>
    </aside>
    <div class="c-posts">
      <a href="<%= user_path(@user) %>" <%= 'active' if current_page?(user_path(@user)) %> class="posts-tag">
        <span>投稿</span>
      </a>
      <a href="<%= likes_user_path(@user) %>" <%= 'active' if current_page?(likes_user_path(@user)) %> class="posts-favorite">
        <span>お気に入り</span>
      </a>
    </div>
  <div class="posts-content">
    <%= render 'posts/posts', posts: @favorites %>
  </div>
</div>

